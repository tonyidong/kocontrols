<Window x:Class="ControlTestApp.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
	xmlns:test="clr-namespace:ControlTestApp"
	
	Title="MainWindow" Height="350" Width="825">
	
	<TabControl>
		<TabItem Header="Auto Suggest">
			<test:AutoSuggestTextBoxTest DataContext="{Binding AutoSuggestConsumerViewModel}"/>
		</TabItem>
		
		<TabItem Header="Auto Suggest DataGrid">
			<test:AutoSuggestTextBoxTestDataGrid DataContext="{Binding CitiesViewModel}" />
		</TabItem>
	</TabControl>
</Window>
