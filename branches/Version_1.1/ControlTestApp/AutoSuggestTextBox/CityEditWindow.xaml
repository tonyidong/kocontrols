<Window x:Class="ControlTestApp.AutoSuggestTextBox.CityEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CityEditWindow" Height="300" Width="300">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="30" />
			<RowDefinition Height="30" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="80"/>
			<ColumnDefinition Width="150"/>
		</Grid.ColumnDefinitions>
		
		<Label Content="City name:" Grid.Column="0" Grid.Row="0"/>
		<TextBox Text="{Binding Name}" Grid.Column="1" Grid.Row="0" Height="22"/>
		<Label Content="Country:" Grid.Column="0" Grid.Row="1" />
		<ComboBox ItemsSource="{Binding Countries}" Grid.Column="1" Grid.Row="1" Height="22" />
		
		<StackPanel Grid.ColumnSpan="2" Grid.Row="2" Orientation="Horizontal">
			<Button Content="Cancel" Name="cancelButton" Click="cancelButton_Click"/>
			<Button Content="Save" Name="saveButton" Click="saveButton_Click"/>
		</StackPanel>
	</Grid>
</Window>
